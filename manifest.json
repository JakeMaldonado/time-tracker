{
    "name": "Time Tacker ",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Tracks time an activity takes and deducts it from expected lifespan",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["scripts/index.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}